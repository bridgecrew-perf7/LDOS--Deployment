alias k='kubectl'
alias kgp='kubectl get pods'
alias kgn='kubectl get nodes'
alias kdp='f(){ kubectl describe pod $@; unset -f f}; f}'
alias klog='kubectl log '
alias kgd='kubectl get deployment'
alias kdd='kubectl descrive deployments'
alias kfail='kubectl get pods --field-selector "status.phase==Failed"'
alias ksns='f(){ kubectl config set-context --current --namespace=$1; unset -f f; }; f'
alias kbb='kubectl run busybox -it --rm --image busybox -- sh'
alias kdns='kubectl run dnsutils -it --rm --image dnsutils -- sh'